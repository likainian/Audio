<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="owner"
            type="com.fly.audio.frag.CropEditFrag" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_151515"
        android:orientation="vertical">
        <com.fly.audio.widgets.crop.CropView
            android:id="@+id/cropView"
            android:layout_above="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/color_cc000000"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <FrameLayout
                android:background="@drawable/shape_000000_r25"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.fly.audio.widgets.crop.DegreesView
                    android:id="@+id/degreesView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:src="@mipmap/crop_ic_rotate"
                    android:view_onClick="@{owner.onClickRotate}"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv34"
                    android:text="@string/crop_3_4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:view_onClick="@{owner.onClick34}"
                    android:textColor="@color/color_7d7d7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv11"
                    android:text="@string/crop_1_1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:view_onClick="@{owner.onClick11}"
                    android:textColor="@color/color_7d7d7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv43"
                    android:text="@string/crop_4_3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:view_onClick="@{owner.onClick43}"
                    android:textColor="@color/color_7d7d7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@mipmap/crop_ic_cancel"
                    android:view_onClick="@{owner.onClickBack}"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_width="56dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="@string/crop_adjust"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@mipmap/crop_ic_confirm"
                    android:view_onClick="@{owner.onClickConfirm}"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_width="56dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDegrees"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@mipmap/crop_ic_degrees"
            android:gravity="center_horizontal"
            android:layout_above="@+id/llBottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"
            android:textColor="@color/color_222222"
            android:layout_width="48dp"
            android:layout_height="37dp"/>

    </RelativeLayout>

</layout>